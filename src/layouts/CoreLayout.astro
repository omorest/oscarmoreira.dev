---
import '../../base.css';
import Navbar from '../components/Navbar.astro';

const { title } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{title}</title>
  </head>
  <body class="flex justify-center text-stone-800">
    <main class="w-80 md:w-[900px] p-10">
      <Navbar />
      <section>
        <slot /> <!-- your content is injected here -->
      </section>
    <!-- <Footer /> -->
    </main>
  </body>
</html>
