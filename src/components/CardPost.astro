---
import {type Post} from '../models/Post'    
interface Props {
  post: Post
}

const {post} = Astro.props
// console.log(post)
---

<a href={`/post/${post.slug}`} class="flex flex-col gap-4 min-w-60 max-w-60 min-h-72 cursor-pointer rounded-lg">
  <figure class="min-w-60 max-w-60 min-h-72 overflow-hidden rounded-lg">
    <img 
      src={post.image} 
      alt=""
      class="w-[100%] h-[100%] object-cover 
      hover:scale-125 transition-all duration-500 
      "
    >
  </figure>
  <div class="text-stone-500 font-normal flex justify-between">
    <span>{post.creationDate}</span>
    <span>{post.timeToRead} min read</span>
  </div>
  <h2 class="font-bold text-xl">{post.title}</h2>
</fi>