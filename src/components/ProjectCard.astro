---
import { type Project } from '@/models/Project'
import LinkIcon from '@/components/icons/LinkIcon.astro'
import GithubIcon from '@/components/icons/GithubIcon.astro'
import Tag from './Tag.astro'

interface Props {
  project: Project
}
const {project} = Astro.props
---

<!-- TODO: use Image astro -->

<article class="w-full flex flex-col md:flex-row gap-6">
  <figure class="lg:min-w-96 lg:max-w-96 rounded-md">
    <img 
      src={project.image}
      alt=""
      class="rounded-lg object-fill"
    >
  </figure>
  <div class="flex flex-col gap-2">
    <h3 class="text-xl font-bold">{project.name}</h3>

    <div class="h-full flex flex-col justify-between gap-4">
      <p class="leading-8">{project.description}</p>
      <div class="flex flex-col gap-4">
        <div class="flex gap-4">
          {project.technologies.map(tag => <Tag> {tag}</Tag>)}
        </div>
        <div class="flex gap-4">
          <a href={project.linkProject} target="_blank" class="bg-stone-800 text-white rounded-lg py-2 px-4 flex justify-center items-center gap-1">
            <GithubIcon width={20} height={20}/>
            Código
          </a>
          <a href={project.linkApp} target="_blank" class="bg-stone-800 text-white rounded-lg py-2 px-4 flex justify-center items-center gap-1">
            <LinkIcon width={20} height={20}/>
            Aplicación
          </a>
        </div>
      </div>
    </div>
  </div>
</article>