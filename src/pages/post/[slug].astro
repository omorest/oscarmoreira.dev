export async function getStaticPaths(): Promise<any[]> { // TODO: improve return type
  const posts = await Astro.glob('../../content/blog/**/*.md')

  return posts.map(post => ({
    params: {
      slug: post.frontmatter.slug
    },
    props: {
      post
    },
  }))
}

const { Content } = Astro.props.post
---
<Fragment>
  <Content />
</Fragment>
